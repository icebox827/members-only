<h1>Posts </h1>
<% @posts.each do | post | %>
  <div class="card" style="width: 18rem;">
   <div class="card-body">
    <% if user_signed_in? %>
        <h3 class="card-title"><strong><%= post.user.name %></strong></h3><br />
    <% end %>
    <p class="card-text"><%= post.title %></p><br />
    <h6 class="card-subtitle mb-2 text-muted"><%= post.content %></h6>
  </div>
  </div>
<% end %>
 

  
   
